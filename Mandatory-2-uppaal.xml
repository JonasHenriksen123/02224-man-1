<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>// Place global declarations here.
const int NUMITEMS = 4;
const int NUMBELTS = 1;

// Events
chan StartRecording[NUMBELTS], StopRecording[NUMBELTS];
chan SensorUnblocked[NUMBELTS], SensorBlocked[NUMBELTS];
chan ItemArrival[NUMBELTS];</declaration>
	<template>
		<name>User</name>
		<parameter>int beltID</parameter>
		<declaration>clock x;

int bagID = 0;</declaration>
		<location id="id0" x="-467" y="-315">
			<name x="-518" y="-323">Idle</name>
		</location>
		<location id="id1" x="-467" y="-136">
			<name x="-518" y="-119">Wait</name>
		</location>
		<init ref="id0"/>
		<transition id="id2">
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="guard" x="-306" y="-238">x &gt;= 26</label>
			<nail x="-314" y="-230"/>
		</transition>
		<transition id="id3">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-620" y="-263">bagID &lt; NUMITEMS</label>
			<label kind="synchronisation" x="-637" y="-246">ItemArrival[beltID]!</label>
			<label kind="assignment" x="-535" y="-229">x := 0,
bagID++</label>
		</transition>
	</template>
	<template>
		<name>VideoCamera</name>
		<parameter>int beltID</parameter>
		<location id="id4" x="0" y="-51">
			<name x="-119" y="-68">NotRecording</name>
		</location>
		<location id="id5" x="0" y="68">
			<name x="-93" y="59">Recording</name>
		</location>
		<init ref="id4"/>
		<transition id="id6">
			<source ref="id5"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="136" y="0">StopRecording[beltID]?</label>
			<nail x="119" y="0"/>
		</transition>
		<transition id="id7">
			<source ref="id4"/>
			<target ref="id5"/>
			<label kind="synchronisation" x="-195" y="-8">StartRecording[beltID]?</label>
		</transition>
	</template>
	<template>
		<name>Controller</name>
		<declaration>clock x;</declaration>
		<location id="id8" x="-17" y="-85">
			<name x="8" y="-119">Idle</name>
		</location>
		<location id="id9" x="-17" y="-17">
			<name x="8" y="-25">BlockedSensor</name>
		</location>
		<location id="id10" x="-17" y="51">
			<name x="8" y="42">UnblockedSensor</name>
			<committed/>
		</location>
		<location id="id11" x="-17" y="119">
			<name x="8" y="110">Wait</name>
		</location>
		<location id="id12" x="-17" y="187">
			<name x="8" y="178">RecordVideo</name>
		</location>
		<location id="id13" x="-17" y="255">
			<name x="8" y="246">ProcessVideo</name>
			<label kind="invariant" x="110" y="246">x &lt;= 6</label>
		</location>
		<location id="id14" x="-17" y="323">
			<name x="8" y="314">SendIdentification</name>
			<committed/>
		</location>
		<init ref="id8"/>
		<transition id="id15">
			<source ref="id14"/>
			<target ref="id8"/>
			<nail x="-161" y="119"/>
		</transition>
		<transition id="id16">
			<source ref="id13"/>
			<target ref="id14"/>
		</transition>
		<transition id="id17">
			<source ref="id12"/>
			<target ref="id13"/>
			<label kind="synchronisation" x="0" y="204">StopRecording[beltID]!</label>
			<label kind="assignment" x="0" y="221">x := 0</label>
		</transition>
		<transition id="id18">
			<source ref="id11"/>
			<target ref="id12"/>
			<label kind="synchronisation" x="0" y="136">StartRecording[beltID]!</label>
		</transition>
		<transition id="id19">
			<source ref="id10"/>
			<target ref="id11"/>
		</transition>
		<transition id="id20">
			<source ref="id9"/>
			<target ref="id10"/>
			<label kind="synchronisation" x="0" y="8">SensorUnblocked[beltID]?</label>
		</transition>
		<transition id="id21">
			<source ref="id8"/>
			<target ref="id9"/>
			<label kind="synchronisation" x="0" y="-68">SensorBlocked[beltID]?</label>
		</transition>
	</template>
	<template>
		<name>Sensor</name>
		<parameter>int beltID</parameter>
		<location id="id22" x="-17" y="-17">
			<name x="8" y="-42">UnBlocked</name>
		</location>
		<location id="id23" x="-17" y="85">
			<name x="0" y="76">Blocked</name>
		</location>
		<init ref="id22"/>
		<transition id="id24">
			<source ref="id23"/>
			<target ref="id22"/>
			<label kind="synchronisation" x="-297" y="25">SensorUnblocked[beltID]?</label>
			<nail x="-93" y="34"/>
		</transition>
		<transition id="id25">
			<source ref="id22"/>
			<target ref="id23"/>
			<label kind="synchronisation" x="17" y="17">SensorBlocked[beltID]?</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Item</name>
		<parameter>t_itemID itemID, int beltID</parameter>
		<declaration>// Place local declarations here.
clock time;</declaration>
		<location id="id26" x="-153" y="-144">
			<name x="-136" y="-153">Initial</name>
		</location>
		<location id="id27" x="-153" y="-59">
			<name x="-136" y="-68">Sensor</name>
			<label kind="invariant" x="-76" y="-68">time &lt;= 6</label>
		</location>
		<location id="id28" x="-153" y="17">
			<name x="-136" y="8">Intermediate</name>
			<label kind="invariant" x="-25" y="8">time &lt;= 5</label>
		</location>
		<location id="id29" x="-153" y="110">
			<name x="-136" y="102">VideoZone</name>
			<label kind="invariant" x="-51" y="102">time &lt;= 21</label>
		</location>
		<location id="id30" x="-153" y="195">
			<name x="-136" y="187">Exit</name>
		</location>
		<init ref="id26"/>
		<transition id="id31">
			<source ref="id29"/>
			<target ref="id30"/>
			<label kind="guard" x="-280" y="144">time == 21</label>
		</transition>
		<transition id="id32">
			<source ref="id28"/>
			<target ref="id29"/>
			<label kind="guard" x="-280" y="59">time == 5</label>
		</transition>
		<transition id="id33">
			<source ref="id27"/>
			<target ref="id28"/>
			<label kind="guard" x="-280" y="-17">time &gt;= 2</label>
			<label kind="synchronisation" x="-374" y="-34">SensorUnblocked[beltID]!</label>
			<label kind="assignment" x="-374" y="-17">time := 0</label>
		</transition>
		<transition id="id34">
			<source ref="id26"/>
			<target ref="id27"/>
			<label kind="synchronisation" x="-374" y="-119">SensorBlocked[beltID]!</label>
			<label kind="assignment" x="-374" y="-102">time := 0</label>
		</transition>
	</template>
	<system>// Place template instantiations here.
// List one or more processes to be composed into a system.
system VideoCamera, Controller, Sensor, Item, User;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
